<h1>Listing flights</h1>
<div class="row">
  <div class="col-md-6">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Departure code</th>
        <th>Arrival code</th>
        <th>Flies at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @flights.each do |flight| %>
        <tr>
          <td><%= link_to flight.airline, flight %></td>
          <td><%= flight.departing_airport.code %></td>
          <td><%= flight.arriving_airport.code %></td>
          <td><%= flight.flies_at.strftime("%I:%M %p") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

