<h1>Airport Details</h1>

<%= link_to "Edit", edit_airport_url(@airport.id) %> |
<%= link_to "Toast", airport_url(@airport.id), :method => :delete %>

<p>Airport Code: <%= @airport.code %></p>
<p>Airport Name: <%= @airport.name %></p>
<p>Current Delay: <%= @airport.min_delay %> minutes.</p>

<h2>Arrivals</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Airline</th>
      <th>Departure code</th>
      <th>Flies at</th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <% departure_airport = Airport.find(flight.departure_airport_id) %>
      <tr>
        <td><%= flight.airline %></td>
        <td><%= departure_airport.code %></td>
        <td><%= flight.flies_at.strftime("%I:%M %p") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= @airport.code %>&zoom=11&size=600x300">
