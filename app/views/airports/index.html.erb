<div class="row">
  <div class="col-md-8">
    <% @airports.each do |airport| %>
      <div class="col-md-3 airport">
          <%= link_to airport_path(airport.id) do %>
            <h1><%= airport.code %></h1>
            <i class="fa fa-plane <%= 'delay' if airport.delay? %>"></i>
            <h2><%= airport.min_delay  %></h2>
          <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4 well">
    <p><%= link_to "Add Airport", new_airport_path %></p>
  </div>
</div>








