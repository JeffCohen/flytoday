<div class="row">
  <div class="col-md-8">
    <% @airports.each do |airport| %>
      <div class="col-md-4">
          <%= link_to airport_path(airport.id) do %>
            <h1><%= airport.code %></h1>
            <i class="fa fa-plane"></i>
            <h2><%= airport.min_delay  %> minutes</h2>
          <% end %>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <p>Other options here...</p>
  </div>
</div>








